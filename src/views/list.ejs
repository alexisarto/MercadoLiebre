<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Productos</title>
</head>
<body>
    <h1>Listado de Productos</h1>
    <ul>
        <% products.forEach(function(product) { %>
            <li>
                <%= product.nombre %>
                <%= product.marca %>
                <%= product.descripcion %>
                - Precio: $<%= product.precio %>
                - Stock: <%= product.stock %>
                <a href='/products/edit/<%= product.id %>'>Editar</a> - <a href='/products/destroy/<%= product.id %>'>Eliminar</a>
            </li>
        <% }) %>
    </ul>
    <a href="/products/create">Agregar un producto</a>
</body>
</html>